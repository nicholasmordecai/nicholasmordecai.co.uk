    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-hbs": "^1.0.4",
    "fs": "0.0.1-security",
    "gulp": "^4.0.2",
    "gulp-browserify": "^0.5.1",
    "gulp-rename": "^1.2.3",
    "gulp-sass": "^4.0.1",
    "gulp-typescript": "^4.0.2",
    "helmet": "^3.12.1",
    "http": "0.0.0",
    "mailgun-js": "^0.22.0",
    "nodemailer": "^4.6.7",
    "raven": "^2.6.2",
    "request": "^2.87.0",
